@model SGSExpo26.Models.Booking

<div style="
    background-color:#fff7ed;
    min-height:100vh;
    display:flex;
    justify-content:center;
    padding:50px 12px;
    box-sizing:border-box;
">

    <div style="width:100%; max-width:420px; text-align:center;">

        <!-- TITLE -->
        <div style="font-size:30px; font-weight:700; margin-bottom:6px;">
            Booking Successful 🎉
        </div>

        <div style="font-size:15px; color:#555; margin-bottom:26px;">
            Your slot has been booked successfully.
        </div>

        <!-- DETAILS CARD -->
        <div style="
            background:#ffffff;
            padding:24px;
            border-radius:16px;
            box-shadow:0 10px 25px rgba(0,0,0,0.08);
            text-align:left;
            margin-bottom:22px;
        ">

            <div style="font-weight:600; margin-bottom:14px;">📋 Booking Details</div>

            <div style="margin-bottom:10px;">
                <strong>Full Name:</strong><br />
                @Model.Name
            </div>

            <div style="margin-bottom:10px;">
                <strong>Mobile Number:</strong><br />
                @Model.Mobile
            </div>

            <div style="margin-bottom:10px;">
                <strong>Number of Persons:</strong><br />
                @Model.Persons
            </div>

            <div>
                <strong>Time Slot:</strong><br />
                @Model.SlotText
            </div>
        </div>

        <!-- SEND WHATSAPP -->
        <button type="button"
                onclick="sendOnWhatsApp()"
                style="
                    width:100%;
                    height:52px;
                    background:#25D366;
                    color:#ffffff;
                    border:none;
                    border-radius:14px;
                    font-size:16px;
                    font-weight:600;
                    cursor:pointer;
                    display:flex;
                    align-items:center;
                    justify-content:center;
                    gap:10px;
                    margin-bottom:16px;
                ">
            <span style="font-size:18px;">📤</span>
            Send Details on WhatsApp
        </button>

        <!-- BOOK AGAIN -->
        <a id="bookAgainBtn"
           href="/Booking/Index"
           style="
                width:100%;
                height:52px;
                display:flex;
                align-items:center;
                justify-content:center;
                gap:10px;
                background:#fdba74;
                color:#ffffff;
                text-decoration:none;
                border-radius:14px;
                font-size:16px;
                font-weight:600;
                opacity:0.6;
                pointer-events:none;
                cursor:not-allowed;
           ">
            <span style="font-size:18px;">🔁</span>
            Book Another Slot
        </a>

    </div>
</div>

<script>
        function sendOnWhatsApp() {

            const name = "@Model.Name";
            const mobile = "@Model.Mobile";   // ONLY 10 digits
            const persons = "@Model.Persons";
            const slot = "@Model.SlotText";

            // ❌ NO indentation, ❌ NO extra spaces
            const message =
    "*My Booking Details*\n\n" +
    "*SGS Jainism Park, Expo 2026, Vadodara*\n\n" +
    "*Name:* " + name + "\n" +
    "*Mobile:* " + mobile + "\n" +
    "*Persons:* " + persons + "\n" +
    "*Time Slot:* " + slot + "\n\n" +
    "We will visit the exhibition on 1st Feb, 2026 (Sunday) and make entry between " + slot + ".\n\n" +
    "Please confirm our booking.";

            const phoneNumber = "917600066346"; // 🔴 YOUR WhatsApp number

            const url =
                "https://wa.me/" +
                phoneNumber +
                "?text=" +
                encodeURIComponent(message);

            window.open(url, "_blank");

            // Enable Book Again
            const btn = document.getElementById("bookAgainBtn");
            btn.style.opacity = "1";
            btn.style.pointerEvents = "auto";
            btn.style.cursor = "pointer";
            btn.style.background = "#f97316";
        }
</script>
